@{
    ViewBag.Title = "Contact";
}

<head>
    <meta charset="utf-8">
    <title>jsTree test</title>
    <link rel="stylesheet" href="~/Scripts/DataTables/datatables.min.css" />
</head>
<body>
    <div class="card m-auto shadow bg-light p-3">
        <div class="card-header bg-light">
            List of Products
        </div>
        <div class="card-body m-auto" style="overflow:scroll; height: 75vh; width:70vw;">
            <table id="table_id" class="table table-striped ">
                <thead>
                    <tr>
                        <th>Product asdasds ID</th>
                        <th>ProductName</th>
                        <th>UnitPrice</th>
                        <th>Category</th>
                        <th>UnitsInStock</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <button type="button" class="btn btn-primary" id="liveToastBtn">Show live toast</button>

        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
            <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#00ff1a" /></svg>
                    <strong class="me-auto">Success!</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    Data was edited and saved successfully.
                </div>
            </div>
        </div>
    <script>
        $(function () { $("#liveToast").toast('show'); });
        $("#liveToastBtn").click(function () { $("#liveToast").toast('show'); $("#liveToast1").toast('show');});
    </script>
</body>
<script src="~/Scripts/DataTables/datatables.min.js"></script>
<script>
    var a = [{ "Column 1": "data 1"}]
    $(document).ready(function () {
        $.ajax(
            {
                url: "/api/td",
                dataType: "json",
                type: "get",
                success: function (data)
                {
                    $('#table_id').DataTable({
                        data: data,
                        columns: [
                            {
                                "data": "ProductID",
                                visible: true
                            },
                            {   "data": "ProductName"},
                            { "data": "UnitPrice" },
                            //{ "data": "UnitsInStock" },
                            {
                                "data": "Category"
                            },
                        ]
                    });
                }
            });
       
    });
</script>